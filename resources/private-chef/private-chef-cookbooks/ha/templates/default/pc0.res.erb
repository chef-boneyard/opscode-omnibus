resource pc0 {
  syncer {
    rate <%= @sync_rate %>;
  }
 
  on <%= @primary['fqdn'] %> {
    device <%= @device %>;
    disk <%= @disk %>;
    flexible-meta-disk  <%= @flexible_meta_disk %>;
    <% if @ipv6_on %>
    address ipv6 [<%= @primary['ip'] %>]:<%= @primary['port'] %>;
    <% else %>
    address <%= @primary['ip'] %>:<%= @primary['port'] %>;
    <% end %>
  }

  on <%= @secondary['fqdn'] %> {
    device <%= @device %>;
    disk <%= @disk %>;
    flexible-meta-disk  <%= @flexible_meta_disk %>;
    <% if @ipv6_on %>
    address ipv6 [<%= @secondary['ip'] %>]:<%= @secondary['port'] %>;
    <% else %>
    address <%= @secondary['ip'] %>:<%= @secondary['port'] %>;
    <% end %>
  }
}
