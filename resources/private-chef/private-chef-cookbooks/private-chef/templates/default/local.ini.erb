[couchdb]
database_dir = <%= File.join(@dir, "db") %>
view_index_dir = <%= File.join(@dir, "db") %>
max_document_size = <%= @max_document_size %> ; 4 GB
max_attachment_chunk_size = <%= @max_attachment_chunk_size %> ; 4GB
os_process_timeout = <%= @os_process_timeout %> ; 300 seconds. for view and external servers.
max_dbs_open = <%= @max_dbs_open %>
delayed_commits = <%= @delayed_commits %>
batch_save_size = <%= @batch_save_size %> ; number of docs at which to save a batch
batch_save_interval = <%= @batch_save_interval %> ; milliseconds after which to save batches

[httpd]
port = <%= @port %>
bind_address = <%= @bind_address %>

[log]
level = <%= @log_level %> 
file = <%= File.join(@log_directory, 'couchdb.log') %>

[query_server_config]
reduce_limit = <%= @reduce_limit %>

[native_query_servers]
erlang = {couch_native_process, start_link, []}
